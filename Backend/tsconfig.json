{
  "compilerOptions": {
    "target": "ESNext", // Or a later ES version that supports ES Modules
    "module": "ESNext", // Use "ES6" or "ESNext" for newer syntax if needed
    "moduleResolution": "Bundler",
    "lib": [
      "ESNext"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist", // Output directory for compiled files
    "rootDir": "", // Your TypeScript source files location
    "strict": false, // Enables a wide range of type checking behavior
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "include": ["src", "*.ts"],
  "exclude": ["node_modules", "dist", ".vscode"]
}